<div class="jumbotron justify-content-center bg-dark">
    <img src="/assets/images/eat-da-burger.png" alt="burger photo" class="mx-auto d-block mb-3" />
    <h1 style="color:white; text-align: center;">EAT-DA-BURGER</h1>
</div>

<div class="container mb-4">
    <div class="row justify-content-center">
      <div>
        <h4 style="text-align: center;">Enter a burger you would like to eat!</h4>
        <form class="newBurger">
            {{!-- <label for="newBurg">Burger Name:</label> --}}
            <input id="newBurg" class="form-control form-control-lg" type="text" name="burger">
            <button type="submit" class="newBurger btn btn-secondary btn-block mt-2">Create Burger</button>
        </form>
      </div>
    </div>
</div>

<div class="container justify-content-center mb-5">
    <div class="row">
        <div class="card col-7 justify-content-center">
            <h4 style="text-align: center;" class="py-3">Burgers</h4>
            <ul style="list-style-type:none;">
            {{!Show Burgers}}
                {{#each burgers}}
                    {{#unless devoured}}
                        <li class="mb-3">
                            <strong>{{this.burger}}</strong>
                            <button type="button" class="eatburger btn btn-secondary btn-small justify-content-right" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Devour It!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="card col-5">
            {{!Add Devoured Burgers}}
            <h4 style="text-align: center;" class="py-3">Devoured Burgers</h4>
            <ul style="list-style-type:none;">
                {{#each burgers}}
                    {{#if devoured}}
                        <li class="mb-3">
                            {{this.burger}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>